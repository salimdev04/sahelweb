{% extends "base.html.twig" %}

{% block body %}

<section style="background-color:#b03021;
    padding: 50px 10px 50px 10px;">

 
<div class="jumbotron" >
<div class="title" style=" padding:10px 0px 10px 0px;
					    height: 50px;
					    color: brown;
					    border-bottom: 1.5px solid #000000;
					    margin-bottom: 30px;">
    <h2> Inscription sur le site</h2>
</div>
    {{ form_start(form) }}

        {{ form_row(form.username) }}
        {{ form_row(form.email) }}
        {{ form_row(form.password) }}
        {{ form_row(form.confirm_password) }}

        <button type="submit" class="btn btn-success">Inscription!</button>
    {{ form_end(form) }}
</div>
</section>
   

{% endblock %}
{% extends "base.html.twig" %}

{% block body %}

	<section style="background-color:#b03021;
    padding: 50px 10px 50px 10px;">

		<div class=" jumbotron mt-4">

			<div class="title" style=" padding:10px 0px 10px 0px;
					    height: 50px;
					    color: brown;
					    border-bottom: 1.5px solid #000000;
					    margin-bottom: 30px;">
				<h2>Connexion</h2>
			</div>


			{% if error %}
				<div class="alert alert-danger">
					{{ error.messageKey | trans(error.messagedata, 'security') }}
				</div>
			{% endif %}

			<form action={{ path('security_login')}} method="post">
				<div class="form-group">
					email
					<input placeholder="Adresse email.." required name="_username" type="text" class="form-control" value=" {{ last_username }} ">
				</div>
				<div class="form-group">
					password
					<input placeholder="password.." required name="_password" type="text" class="form-control">
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-success">Connexion</button>
				</div>

			</form>

		</div>

	</section>

{% endblock %}
